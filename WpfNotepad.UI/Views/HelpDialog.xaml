<Window
    x:Class="WpfNotepad.UI.Views.HelpDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="About"
    Width="300"
    Height="300"
    WindowStartupLocation="CenterScreen">
    <Grid Margin="24">

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock
                HorizontalAlignment="Center"
                FontSize="22"
                FontWeight="Bold"
                Text="WPF Notepad" />

            <Separator Margin="0,8" />

            <TextBlock
                Margin="0,8"
                Text="Sample notepad application written in C# and WPF. This project was made possible by following a tutorial from ToskersCorner.com"
                TextWrapping="Wrap" />

            <TextBlock
                FontSize="16"
                FontWeight="SemiBold"
                Text="This sample covers" />

            <TextBlock TextWrapping="Wrap">
                -MVVM<LineBreak />
                -Commands<LineBreak />
                -Property Notifications<LineBreak />
                -Generic Methods<LineBreak />
            </TextBlock>

        </StackPanel>
    </Grid>
</Window>